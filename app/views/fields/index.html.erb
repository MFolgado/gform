<h1>Listing fields</h1>

<table class="show">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan=""></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <!-- <td><%= link_to 'Show', field %></td> -->
        <td width="20%"><%= link_to 'Edit', edit_field_path(field) %></td>
        <td width="20%"><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

